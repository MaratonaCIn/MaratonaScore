# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.cpp text eol=lf
*.hpp text eol=lf
*.h text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.py text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# CMake
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
CONTRIBUTING.md text eol=lf

# Windows-specific files (keep CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.xlsx binary
*.xls binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.so binary
*.dll binary
*.dylib binary
*.exe binary
*.a binary
*.lib binary

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# GitHub Linguist - Help GitHub detect languages correctly
*.hpp linguist-language=C++
*.cpp linguist-language=C++

# Export-ignore (files not included in git archive/release)
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
build/ export-ignore
.vscode/ export-ignore
.idea/ export-ignore
